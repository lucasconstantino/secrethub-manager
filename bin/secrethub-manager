#!/usr/bin/env node

const { Command } = require("commander");

const { version } = require("../package.json");
const init = require("../commands/init");

const quit = (err) => {
  console.error(err);
  process.exit(1);
};

new Command()
  .version(version)
  .addCommand(init)
  .parseAsync(process.argv)
  .catch(quit);
